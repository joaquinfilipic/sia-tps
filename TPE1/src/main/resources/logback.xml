<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d][%-75.75logger][%-5.5level][%-25.25thread] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework">
        <level value="info" />
    </logger>
    <logger name="org.hibernate">
        <level value="info" />
    </logger>

    <root>
        <level value="info" />
        <appender-ref ref="console" />
    </root>

</configuration>
